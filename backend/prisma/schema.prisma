generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Settings {
  key       String   @id
  value     String
  updatedAt DateTime @updatedAt
}

model Source {
  id        String   @id @default(uuid())
  path      String   @unique
  mode      String   @default("watch") // scanOnce, watch
  enabled   Boolean  @default(true)
  status    String   @default("IDLE") // IDLE, SCANNING, ERROR
  scannedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  files     File[]
  media     Media[]
}

model File {
  id        String   @id @default(uuid())
  path      String   @unique
  name      String
  extension String?
  size      BigInt
  // mimeType removed, only in Media
  hash      String?
  isDirectory Boolean @default(false)
  
  parentId  String?
  parent    File?    @relation("DirectoryTree", fields: [parentId], references: [id], onDelete: Cascade)
  children  File[]   @relation("DirectoryTree")
  
  sourceId  String
  source    Source   @relation(fields: [sourceId], references: [id], onDelete: Cascade)
  
  media     Media?
  sidecarFor Metadata? @relation("Sidecar")
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([sourceId])
  @@index([hash])
  @@index([parentId])
}

model Media {
  id          String   @id @default(uuid())
  fileId      String   @unique
  file        File     @relation(fields: [fileId], references: [id], onDelete: Cascade)
  
  sourceId    String
  source      Source   @relation(fields: [sourceId], references: [id], onDelete: Cascade)
  
  type        String   // image, video
  mimeType    String
  
  metadata    Metadata?
  thumbnails  Thumbnail[]
  
  createdAt   DateTime @default(now())
  
  @@index([sourceId])
}


model Metadata {
  id          String   @id @default(uuid())
  mediaId     String   @unique
  media       Media    @relation(fields: [mediaId], references: [id], onDelete: Cascade)

  sidecarFileId String? @unique
  sidecarFile   File?   @relation("Sidecar", fields: [sidecarFileId], references: [id])
  
  dateTaken   DateTime?
  width       Int?
  height      Int?
  duration    Float?   // for videos
  
  // Locations (simplified)
  latitude    Float?
  longitude   Float?

  // Camera Info
  make        String?
  model       String?
  lens        String?
  iso         Int?
  fNumber     Float?
  exposureTime Float? // in seconds

  // Video Info
  fps         Float?
  codec       String?
  bitrate     Int?
  
  raw         Json?    // Full EXIF/ffprobe dump
}

model Thumbnail {
  id        String   @id @default(uuid())
  mediaId   String
  media     Media    @relation(fields: [mediaId], references: [id], onDelete: Cascade)
  
  size      String   // small, medium, large
  path      String   // relative path to thumbs dir
  width     Int
  height    Int

  @@unique([mediaId, size])
}

model JobRun {
  id          String   @id @default(uuid())
  name        String   // e.g. "Scan Sources"
  type        String   // scan, metadata, thumbnails
  status      String   // queued, running, completed, failed, paused
  progress    Int      @default(0)
  data        Json?    // Job arguments
  result      Json?    // Result data or error
  
  startedAt   DateTime?
  completedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
